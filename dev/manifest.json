{
  "manifest_version": 2,

  "name": "統合検索isear",
  "description": "複数ワードに対応したGoogle検索連携のページ内検索ツール",
  "version": "1.4",

  "background": {
      "persistent": true,
      "scripts": ["background.js" ]
   },
  "browser_action": {
    "default_icon": "data/icons/icon4.png",
    "default_popup": "popup.html"
  },
  "icons": {
      "128": "data/icons/icon4.png",
      "16": "data/icons/icon4.png",
      "48": "data/icons/icon4.png"
  },
  "permissions": [
    "tabs", "storage", "contextMenus",
    "http://*/*", "https://*/*"
  ]
}
