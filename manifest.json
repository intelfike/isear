{
  "manifest_version": 2,

  "name": "isear",
  "description": "統合検索ツール。Google検索、ページ内検索を統合する目的です。",
  "version": "0.23",

  "background": {
      "persistent": true,
      "scripts": ["lib/common.js", "lib/apiwrapper.js", "background.js" ]
   },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
      "128": "icon.png",
      "16": "icon.png",
      "48": "icon.png"
  },
  "permissions": [
    "tabs", "storage", "contextMenus",
    "http://*/*", "https://*/*"
  ]
}
