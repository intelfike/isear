{
  "manifest_version": 2,

  "name": "isear",
  "description": "統合検索ツール。Google検索、ページ内検索を統合する目的です。",
  "version": "0.0",

  "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "storage",
    "http://*/*", "https://*/*"
  ]
}
